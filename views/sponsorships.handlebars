    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
        <li><a href="/animals">Animals</a></li>
        <li><a href="/foods">Food Inventory</a></li>
